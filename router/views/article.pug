extends layout


block content
  
  h1 #{article.title}
  h5 Written by #{article.author}
  p= article.body
  br
  form(method = 'POST' Action = '/article/delete/'+article._id)
   a.btn.btn-default(href='/article/edit/'+article._id) edit
   input.btn.btn-primary(type='submit', value = 'Delete' )

   